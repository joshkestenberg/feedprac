<h1>Edit your order</h2>
<%= form_for [user, order] do |f| %>

  <%= f.hidden_field :dropoff_end, value: order.dropoff_end %>
  <%= f.hidden_field :claim_time, value: order.claim_time %>
  <%= f.hidden_field :picked_up, value: order.picked_up %>
  <%= f.hidden_field :dropped_off, value: order.dropped_off %>
  <%= f.hidden_field :ready_claim, value: order.ready_claim %>
  <%= f.hidden_field :transit, value: order.transit %>
  <%= f.hidden_field :complete, value: order.complete %>
  <%= f.hidden_field :ready_pick, value: order.ready_pick %>
  <%= f.hidden_field :awaiting_pick, value: order.awaiting_pick %>

  <%= f.label :pickup_start %>
  <%= f.datetime_select :pickup_start, default: order.pickup_start %>

  <%= f.label :pickup_end %>
  <%= f.datetime_select :pickup_end, default: order.pickup_end %>

  <%= f.submit %>

<% end %>
