<h1>Your Orders<h1>

<% if @user != current_user %>
  <p>You're unauthorized to view this content<p>
<% else %>
  <!-- the following data is role-dependant -->
  <% case @user.role%>
  <% when "business", "charity", "admin" %>
    <%= render partial: "available", locals: {user: @user, all_orders: @all_orders, user_orders: @user_orders} %>
    <%= render partial: "pending_approval", locals: {user: @user, all_orders: @all_orders, user_orders: @user_orders} %>
  <% end %>
  <!-- whereas everybody sees these categories -->
  <%= render partial: "seeking_driver", locals: {user: @user, all_orders: @all_orders, user_orders: @user_orders} %>
  <%= render partial: "awaiting_pickup", locals: {user: @user, all_orders: @all_orders, user_orders: @user_orders} %>
  <%= render partial: "in_transit", locals: {user: @user, all_orders: @all_orders, user_orders: @user_orders} %>
  <%= render partial: "complete", locals: {user: @user, all_orders: @all_orders, user_orders: @user_orders} %>
<% end %>
