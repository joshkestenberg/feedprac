<h1>Your Orders<h1>

<% if @user != current_user %>
  <p>You're unauthorized to view this content<p>
<% else %>
  <!-- the following data is role-dependant -->
  <% case @user.role%>
  <% when "business", "charity", "admin" %>
    <%= render partial: "readyclaim", locals: {user: @user, all_orders: @all_orders, user_orders: @user_orders} %>
    <%= render partial: "awaitingapproval", locals: {user: @user, all_orders: @all_orders, user_orders: @user_orders} %>
  <% end %>
  <!-- whereas everybody sees these categories -->
  <%= render partial: "readypick", locals: {user: @user, all_orders: @all_orders, user_orders: @user_orders} %>
  <%= render partial: "awaitingpick", locals: {user: @user, all_orders: @all_orders, user_orders: @user_orders} %>
  <%= render partial: "transit", locals: {user: @user, all_orders: @all_orders, user_orders: @user_orders} %>
  <%= render partial: "complete", locals: {user: @user, all_orders: @all_orders, user_orders: @user_orders} %>
<% end %>
